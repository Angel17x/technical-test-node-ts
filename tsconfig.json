{
  "ts-node": {
    "transpileOnly": true,
    "files": true
  },
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2021",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "lib": [
    "es2021"
  ],
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "./coverage",
    "./dist",
    "__tests__",
    "jest.config.js",
    "node_modules"
  ],
}